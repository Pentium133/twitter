<%= form_with(model: [comment, Comment.new], local: true) do |form| %>
  <div class="field">
    <%= form.text_area :content, placeholder: "Reply to this comment..." %>
  </div>
  <%= form.hidden_field :comment_id, value: comment.id %>
  <%= form.hidden_field :post_id, value: post.id %>
  <div class="actions">
    <%= form.submit "Reply" %>
  </div>
<% end %>
