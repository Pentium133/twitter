<%= form_with(model: [post, Comment.new], local: true) do |form| %>
  <div class="field">
    <%= form.text_area :content, placeholder: "Add a comment..." %>
  </div>
  <%= form.hidden_field :post_id, value: post.id %>
  <%= form.hidden_field :comment_id, value: nil %>
  <div class="actions">
    <%= form.submit "Comment" %>
  </div>
<% end %>
