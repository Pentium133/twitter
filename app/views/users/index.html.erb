<p style="color: green"><%= notice %></p>

<% content_for :title, "Users" %>

<h1>Users</h1>

<div id="users">
  <table>
    <tr>
      <th>Email</th>
      <th>Following</th>
      <th></th>
    </tr>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><% if current_user.following.exists?(user_id: user.id) %>
              <%= button_to "Unfollow", user_follows_path(user), method: :delete %>
            <% else %>
              <%= button_to "Follow", user_follows_path(user), method: :post %>
            <% end %>
        </td>
        <td><%= link_to "Show this user", user %></td>
      </tr>
    <% end %>
  </table>
</div>

<%= link_to "New user", new_user_path %>
